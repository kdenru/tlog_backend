{
  "name": "backend",
  "version": "1.0.0",
  "description": "Fastify + TypeScript бэкенд",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify --clear src/server.ts",
    "dev:debug": "ts-node-dev --respawn --transpile-only --inspect -- src/server.ts",
    "lint": "tsc --noEmit",
    "build": "tsup src/server.ts --format cjs --clean",
    "build:watch": "tsup src/server.ts --format cjs --clean --watch",
    "start": "node dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.3"
  },
  "devDependencies": {
    "@prisma/client": "^6.8.2",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.15.21",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.8.2",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
